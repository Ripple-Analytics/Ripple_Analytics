{
  "dashboard": {
    "id": null,
    "uid": "audit-security",
    "title": "Audit & Security Monitoring",
    "tags": ["audit", "security", "mental-models"],
    "timezone": "browser",
    "schemaVersion": 30,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Events by Type (Last Hour)",
        "type": "piechart",
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "sum by (event_type) (increase(audit_events_total[1h]))",
            "legendFormat": "{{event_type}}"
          }
        ],
        "options": {
          "legend": {"displayMode": "table", "placement": "right"}
        }
      },
      {
        "id": 2,
        "title": "API Requests per Minute",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 0},
        "targets": [
          {
            "expr": "rate(audit_api_requests_total[1m]) * 60",
            "legendFormat": "Requests/min"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "custom": {"lineWidth": 2, "fillOpacity": 20}
          }
        }
      },
      {
        "id": 3,
        "title": "Rate Limit Violations",
        "type": "stat",
        "gridPos": {"h": 4, "w": 4, "x": 16, "y": 0},
        "targets": [
          {
            "expr": "sum(increase(rate_limit_exceeded_total[1h]))",
            "legendFormat": "Violations"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 10},
                {"color": "red", "value": 50}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Auth Failures",
        "type": "stat",
        "gridPos": {"h": 4, "w": 4, "x": 20, "y": 0},
        "targets": [
          {
            "expr": "sum(increase(auth_failures_total[1h]))",
            "legendFormat": "Failures"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 5},
                {"color": "red", "value": 20}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "Active API Keys",
        "type": "stat",
        "gridPos": {"h": 4, "w": 4, "x": 16, "y": 4},
        "targets": [
          {
            "expr": "api_keys_active",
            "legendFormat": "Active Keys"
          }
        ]
      },
      {
        "id": 6,
        "title": "Blocked IPs",
        "type": "stat",
        "gridPos": {"h": 4, "w": 4, "x": 20, "y": 4},
        "targets": [
          {
            "expr": "blocked_ips_total",
            "legendFormat": "Blocked"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "red", "value": 1}
              ]
            }
          }
        }
      },
      {
        "id": 7,
        "title": "Analysis Events Timeline",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "rate(audit_analysis_completed_total[5m]) * 60",
            "legendFormat": "Analyses/min"
          },
          {
            "expr": "rate(audit_lollapalooza_detected_total[5m]) * 60",
            "legendFormat": "Lollapaloozas/min"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {"lineWidth": 2, "fillOpacity": 10}
          }
        }
      },
      {
        "id": 8,
        "title": "Decision Journal Activity",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "rate(audit_decision_created_total[5m]) * 60",
            "legendFormat": "Created/min"
          },
          {
            "expr": "rate(audit_decision_outcome_recorded_total[5m]) * 60",
            "legendFormat": "Outcomes/min"
          }
        ]
      },
      {
        "id": 9,
        "title": "Failure Mode Triggers",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "rate(audit_failure_mode_triggered_total[5m]) * 60",
            "legendFormat": "Triggers/min"
          },
          {
            "expr": "rate(audit_safeguard_recommended_total[5m]) * 60",
            "legendFormat": "Safeguards/min"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "custom": {"lineWidth": 2}
          }
        }
      },
      {
        "id": 10,
        "title": "API Response Times",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(api_response_duration_seconds_bucket[5m]))",
            "legendFormat": "p50"
          },
          {
            "expr": "histogram_quantile(0.95, rate(api_response_duration_seconds_bucket[5m]))",
            "legendFormat": "p95"
          },
          {
            "expr": "histogram_quantile(0.99, rate(api_response_duration_seconds_bucket[5m]))",
            "legendFormat": "p99"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s"
          }
        }
      },
      {
        "id": 11,
        "title": "Top Actors by Activity",
        "type": "table",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24},
        "targets": [
          {
            "expr": "topk(10, sum by (actor) (increase(audit_events_total[24h])))",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {"id": "organize", "options": {"renameByName": {"actor": "Actor", "Value": "Events (24h)"}}}
        ]
      },
      {
        "id": 12,
        "title": "Error Rate by Endpoint",
        "type": "table",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24},
        "targets": [
          {
            "expr": "sum by (endpoint) (increase(api_errors_total[1h]))",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {"id": "organize", "options": {"renameByName": {"endpoint": "Endpoint", "Value": "Errors (1h)"}}}
        ]
      },
      {
        "id": 13,
        "title": "Data Export/Import Activity",
        "type": "timeseries",
        "gridPos": {"h": 6, "w": 24, "x": 0, "y": 32},
        "targets": [
          {
            "expr": "rate(audit_data_exported_total[1h]) * 60",
            "legendFormat": "Exports/min"
          },
          {
            "expr": "rate(audit_data_imported_total[1h]) * 60",
            "legendFormat": "Imports/min"
          }
        ]
      }
    ]
  }
}
