# =============================================================================
# MENTAL MODELS SYSTEM - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# =============================================================================
# LLM CONFIGURATION (Choose one backend)
# =============================================================================

# Ollama (Local, Open Source - Recommended)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3:8b
# For better results, use larger models:
# OLLAMA_MODEL=llama3:70b
# OLLAMA_MODEL=mixtral:8x7b

# llama.cpp (Local, Open Source - Most Efficient)
# LLAMACPP_HOST=http://localhost:8080

# vLLM (Local, Open Source - Best Throughput)
# VLLM_HOST=http://localhost:8000

# OpenAI (Cloud - Optional)
# OPENAI_API_KEY=sk-...
# OPENAI_MODEL=gpt-4.1-mini

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/mental_models
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=mental_models

# =============================================================================
# CHAT INTEGRATIONS (Optional)
# =============================================================================

# Slack
SLACK_BOT_TOKEN=xoxb-...
SLACK_SIGNING_SECRET=...
SLACK_APP_TOKEN=xapp-...

# Discord
DISCORD_BOT_TOKEN=...
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...

# Matrix (Self-hosted)
MATRIX_HOMESERVER=https://matrix.example.com
MATRIX_USER_ID=@bot:example.com
MATRIX_ACCESS_TOKEN=...

# Generic Webhook
WEBHOOK_URL=https://example.com/webhook
WEBHOOK_SECRET=...

# =============================================================================
# STORAGE CONFIGURATION (Optional)
# =============================================================================

# Local Storage
LOCAL_STORAGE_PATH=/home/ubuntu/data

# S3/MinIO
AWS_ACCESS_KEY_ID=...
AWS_SECRET_ACCESS_KEY=...
AWS_REGION=us-east-1
S3_BUCKET=mental-models
# For MinIO (self-hosted S3):
# S3_ENDPOINT_URL=http://localhost:9000

# Google Drive (via rclone)
# Configure using: rclone config
# GDRIVE_CONFIG_PATH=/home/ubuntu/.gdrive-rclone.ini

# =============================================================================
# DATA SOURCE API KEYS (Optional)
# =============================================================================

# Alpha Vantage (Free tier available)
ALPHA_VANTAGE_API_KEY=...

# SEC EDGAR (No API key needed, but set user agent)
SEC_USER_AGENT=YourApp/1.0 (your@email.com)

# =============================================================================
# VERSION CONTROL
# =============================================================================

# GitHub
GITHUB_TOKEN=ghp_...
GITHUB_OWNER=your-username
GITHUB_REPO=your-repo

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================

# Prometheus
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# API Server
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# Caching
CACHE_ENABLED=true
CACHE_TTL=3600

# =============================================================================
# SECURITY
# =============================================================================

# JWT (for API authentication)
JWT_SECRET=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION=3600

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
