# Mental Models System - Environment Variables
# Copy this file to .env and fill in your values

# PostgreSQL Configuration (required)
POSTGRES_PASSWORD=your_secure_password_here

# pgAdmin Configuration (optional, only needed if using admin profile)
PGADMIN_EMAIL=admin@mentalmodels.local
PGADMIN_PASSWORD=your_pgadmin_password_here

# Database URL (optional, defaults to local postgres container)
# DATABASE_URL=jdbc:postgresql://postgres:5432/mental_models

# LM Studio URL (optional, defaults to localhost:1234)
# LM_STUDIO_URL=http://host.docker.internal:1234

# Distributed Processing Configuration
# ENABLE_DATABASE=true
# ENABLE_DISTRIBUTED=true
# ENABLE_CONTINUOUS=false
# NUM_WORKERS=4
