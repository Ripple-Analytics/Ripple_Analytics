{erl_opts, [debug_info]}.

{deps, [
    {cowboy, "2.10.0"},
    {jsx, "3.1.0"},
    {gun, "2.0.1"}
]}.

{shell, [
    {apps, [auto_updater_service]}
]}.

{relx, [
    {release, {auto_updater_service, "1.0.0"}, [
        auto_updater_service,
        cowboy,
        jsx,
        sasl
    ]},
    {dev_mode, false},
    {include_erts, true},
    {extended_start_script, true},
    {sys_config, "./config/sys.config"},
    {vm_args, "./config/vm.args"}
]}.

{profiles, [
    {prod, [
        {relx, [
            {dev_mode, false},
            {include_erts, true}
        ]}
    ]}
]}.
