{erl_opts, [debug_info]}.

{deps, [
    {cowboy, "2.10.0"},
    {jsx, "3.1.0"},
    {hackney, "1.20.1"}
]}.

{shell, [
    {apps, [api_gateway]}
]}.

{relx, [
    {release, {api_gateway, "1.0.0"}, [api_gateway, sasl]},
    {mode, dev},
    {include_erts, false},
    {extended_start_script, true}
]}.

{profiles, [
    {prod, [
        {relx, [
            {mode, prod},
            {include_erts, true}
        ]}
    ]}
]}.
