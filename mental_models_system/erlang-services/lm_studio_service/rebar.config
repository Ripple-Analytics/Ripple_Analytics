{erl_opts, [debug_info]}.

{deps, [
    {cowboy, "2.10.0"},
    {jsx, "3.1.0"},
    {hackney, "1.20.1"}
]}.

{shell, [
    {apps, [lm_studio_service]}
]}.

{relx, [
    {release, {lm_studio_service, "1.0.0"}, [
        lm_studio_service,
        cowboy,
        jsx,
        hackney,
        sasl
    ]},
    {mode, dev},
    {dev_mode, true},
    {include_erts, false},
    {extended_start_script, true},
    {sys_config, "./config/sys.config"},
    {vm_args, "./config/vm.args"}
]}.

{profiles, [
    {prod, [
        {relx, [
            {mode, prod},
            {dev_mode, false},
            {include_erts, true}
        ]}
    ]}
]}.
